@model IEnumerable<Lab6.Models.Tweet>

@{
    Layout = "_Layout";
    
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
</head>
<body>
    <div class="container marketing">
        <div class="row">
            <div class="col-lg-12 col-sm-3">
                <h3>Post a comment!</h3>
                <form asp-controller="Home" asp-action="PostTweet">

                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" name="Username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Content</label>
                        <textarea type="text" rows="3" name="Content" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit Tweet" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>










    <hr class="featurette-divider">
    <div class="row featurette">
        <div class="col-lg-12 col-sm-3">
            <ul class="list-group">

                @if (Model == null || Model.Count() == 0)
            {
                    <p>There are no tweets to display.</p>
                }
                else
                {
                    @foreach (var item in Model)
                {
                        <p>Content: @item.Content<br />By: @item.Username<br />TweetId: @item.TweetId</p>
                    }
                }
            </ul>
        </div>
    </div>
</body>
</html>
